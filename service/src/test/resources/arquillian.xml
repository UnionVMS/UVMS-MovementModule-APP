<?xml version="1.0" encoding="UTF-8"?>
<arquillian xmlns="http://jboss.org/schema/arquillian"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jboss.org/schema/arquillian http://jboss.org/schema/arquillian/arquillian_1_0.xsd">
	<defaultProtocol type="Servlet 3.0" />
	<!-- uncomment to see deployed archive
	<engine>
		<property name="deploymentExportPath">target/deployments</property>
	</engine>
     -->	
    <container qualifier="wildfly-remote" default="true">
		<protocol type="Servlet 3.0">
			<property name="host">${arquillian.wildfly.host}</property>
			<property name="port">${arquillian.wildfly.port}</property>
		</protocol>
		<configuration>
			<property name="managementAddress">${arquillian.wildfly.host}</property>
			<property name="managementPort">${arquillian.wildfly.admin.port}</property>
			<property name="username">${arquillian.wildfly.admin.user}</property>
			<property name="password">${arquillian.wildfly.admin.pwd}</property>
		</configuration>
	</container>
    
	<extension qualifier="jacoco">
		<property name="excludes">eu.europa.ec.fisheries.schema.*</property>
		<property name="includes">eu.europa.ec.fisheries.uvms.movement.*</property>
	</extension>
  
</arquillian>